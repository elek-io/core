{
  "name": "@elek-io/core",
  "version": "0.15.1",
  "description": "Handles core functionality of elek.io Projects like file IO and version control.",
  "homepage": "https://elek.io",
  "repository": "https://github.com/elek-io/core",
  "bugs": {
    "url": "https://github.com/elek-io/core/issues"
  },
  "type": "module",
  "bin": {
    "elek-io": "./dist/cli/index.cli.js"
  },
  "files": [
    "dist/node",
    "dist/browser"
  ],
  "exports": {
    ".": {
      "node": {
        "import": {
          "types": "./dist/node/index.node.d.ts",
          "default": "./dist/node/index.node.js"
        }
      },
      "import": {
        "types": "./dist/browser/index.browser.d.ts",
        "default": "./dist/browser/index.browser.js"
      }
    }
  },
  "pnpm": {
    "overrides": {}
  },
  "scripts": {
    "lint": "eslint",
    "check-types": "tsc --noEmit",
    "check-format": "prettier --check . || exit 0",
    "format": "prettier --write .",
    "dev": "vitest",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "build": "tsdown",
    "release": "changeset publish"
  },
  "dependencies": {
    "@commander-js/extra-typings": "14.0.0",
    "@hono/node-server": "1.19.5",
    "@hono/zod-openapi": "1.1.4",
    "@scalar/hono-api-reference": "0.9.22",
    "@sindresorhus/slugify": "3.0.0",
    "chokidar": "4.0.3",
    "code-block-writer": "13.0.3",
    "commander": "14.0.2",
    "fs-extra": "11.3.2",
    "hono": "4.10.4",
    "mime": "4.1.0",
    "p-queue": "9.0.0",
    "semver": "7.7.3",
    "tsdown": "0.15.12",
    "uuid": "13.0.0",
    "winston": "3.18.3",
    "winston-daily-rotate-file": "5.0.0",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@eslint/js": "9.38.0",
    "@faker-js/faker": "10.1.0",
    "@tsconfig/node22": "22.0.2",
    "@tsconfig/strictest": "2.0.7",
    "@types/fs-extra": "11.0.4",
    "@types/node": "22.18.13",
    "@types/semver": "7.7.1",
    "@vitest/coverage-v8": "4.0.5",
    "eslint": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "globals": "16.4.0",
    "jiti": "2.6.1",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.2",
    "vitest": "4.0.5"
  },
  "peerDependencies": {
    "dugite": "2.7.1"
  }
}
