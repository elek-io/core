{
  "name": "@elek-io/core",
  "version": "0.13.0",
  "description": "Handles core functionality of elek.io Projects like file IO and version control.",
  "homepage": "https://elek.io",
  "repository": "https://github.com/elek-io/core",
  "bugs": {
    "url": "https://github.com/elek-io/core/issues"
  },
  "type": "module",
  "files": [
    "dist/node",
    "dist/browser"
  ],
  "exports": {
    ".": {
      "node": {
        "import": {
          "types": "./dist/node/index.node.d.ts",
          "default": "./dist/node/index.node.js"
        }
      },
      "import": {
        "types": "./dist/browser/index.browser.d.ts",
        "default": "./dist/browser/index.browser.js"
      }
    }
  },
  "scripts": {
    "lint": "tsc",
    "dev": "vitest",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "build": "tsup",
    "release": "changeset publish"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.1",
    "@hono/swagger-ui": "^0.4.1",
    "@hono/zod-openapi": "^0.16.0",
    "@sindresorhus/slugify": "2.2.1",
    "fs-extra": "11.2.0",
    "hono": "^4.6.3",
    "mime": "4.0.4",
    "p-queue": "8.0.1",
    "semver": "7.6.3",
    "uuid": "10.0.0",
    "winston": "3.14.2",
    "winston-daily-rotate-file": "5.0.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.8",
    "@faker-js/faker": "9.0.3",
    "@tsconfig/node20": "20.1.4",
    "@tsconfig/strictest": "2.0.5",
    "@types/fs-extra": "11.0.4",
    "@types/node": "20.16.11",
    "@types/semver": "7.5.8",
    "@types/uuid": "10.0.0",
    "@vitest/coverage-v8": "2.0.3",
    "tsup": "8.3.0",
    "typescript": "5.6.2",
    "vitest": "2.0.3"
  },
  "peerDependencies": {
    "dugite": "2.7.1"
  }
}
